<%- include('../partials/header') %>

<h3>Edit Movie</h3>

<form method="POST" action="/movies/<%= movie._id %>">
  <input type="hidden" name="_method" value="PUT"> <!-- Add this line -->

  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%= movie.title %>">

  <label for="releaseYear">Release Year:</label>
  <input type="number" id="releaseYear" name="releaseYear" value="<%= movie.releaseYear %>">

  <label for="cast">Cast:</label>
  <input type="text" id="cast" name="cast" value="<%= movie.cast %>">

  <button type="submit">Update Movie</button>
</form>

<%- include('../partials/footer') %>

